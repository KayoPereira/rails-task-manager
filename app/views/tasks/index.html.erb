<div class="container d-flex justify-content-start align-items-center flex-column">
  <div class="d-flex justify-content-center align-items-center flex-column">
    <% @tasks.each do |task| %>
      <ul>
        <li>
          <% if task.completed == false %>
            <i class="far fa-square"></i>
          <% else %>
            <i class="fas fa-check-square"></i>
          <% end %>
          <%= link_to task.title, task_path(task), class: "text-decoration-none" %> | 
          <%= link_to '', delete_path(task), method: :delete, data: { confirm: 'Are you sure?' }, :class => "fas fa-trash-alt" %>
        </li>
      </ul>
    <% end  %>

    <%= link_to 'Criar nova tarefa', new_task_path, :class => 'btn btn-primary create-task' %>
  </div>
</div>